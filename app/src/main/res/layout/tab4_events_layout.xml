<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="255dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="15dp"
    android:layout_margin="10dp"
    android:padding="2dp"
    android:id="@+id/card1_tab4"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:id="@+id/rel2">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rel1">

                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/linear1"
                    android:layout_marginLeft="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_eventName_tab4"
                        android:text="The Big Bass House Project Ft DRoxic"
                        android:textSize="18dp"
                        android:textColor="#000"
                        android:textStyle="bold"/>

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fillViewport="true">

                        <LinearLayout
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/img_bag_tab4"
                                android:src="@drawable/ic_action_bag"/>
                            <TextView
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:id="@+id/tv_date_tab4"
                                android:text="Feb 17"
                                android:layout_marginTop="7dp"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/img_clock_tab4"
                                android:layout_marginLeft="5dp"
                                android:src="@drawable/ic_action_clock"/>
                            <TextView
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:id="@+id/tv_time_PM_tab4"
                                android:text="12:30"
                                android:layout_marginTop="7dp"/>
                            <TextView
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:id="@+id/tv_PM_tab4"
                                android:text="PM"
                                android:layout_marginLeft="2dp"
                                android:layout_marginTop="7dp"/>

                            <View
                                android:layout_width="7dp"
                                android:layout_height="1dp"
                                android:layout_marginTop="16dp"
                                android:layout_marginLeft="3dp"
                                android:id="@+id/view_hyphen_tab4"
                                android:layout_marginRight="3dp"
                                android:background="@drawable/horizontal_line"/>

                            <TextView
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:id="@+id/tv_time_AM_tab4"
                                android:text="12:30"
                                android:layout_marginTop="7dp"/>

                            <TextView
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:id="@+id/tv_AM_tab4"
                                android:text="AM"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="7dp"/>

                        </LinearLayout>

                    </ScrollView>

                </LinearLayout>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imgBtn_call_tab4"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:layout_centerVertical="true"
                    android:background="@color/white"
                    android:src="@mipmap/ic_launcher_phone"/>

            </RelativeLayout>

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/rel1"
                android:layout_margin="25dp"
                android:visibility="visible"
                android:src="@mipmap/ic_launcher_phone"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rel2"
            android:id="@+id/rel3"
            android:background="@color/lightgrey">

            <TextView
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_label_tab4"
                android:background="@drawable/label_layout"
                android:text="DJ Night"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:padding="5dp"
                android:layout_marginTop="25dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_orgName_tab4"
                android:text="Local"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="45dp"
                android:layout_marginLeft="25dp"
                android:textColor="@color/white"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_addr_tab4"
                android:text="Connaught Place, New Delhi"
                android:layout_marginBottom="25dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="25dp"
                android:textColor="@color/white"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="25dp"
                android:id="@+id/rel4"
                android:background="@drawable/transparent_rectangle">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_distance_tab4"
                    android:text="2.4"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_KM_tab4"
                    android:text="KM"
                    android:textColor="@color/white"
                    android:layout_toRightOf="@+id/tv_distance_tab4"/>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>


</android.support.v7.widget.CardView>
